{
  "name": "peleodiase/scraper",
  "description": "A CLI Scrapper Tool",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Pele Odiase",
      "email": "peleodiase@yahoo.co.uk"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "ext-curl": "*",
    "symfony/console": "^6.2",
    "symfony/dom-crawler": "^6.2",
    "symfony/css-selector": "^6.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "^3.13"
  },
  "scripts": {
    "unit-test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit",
    "cs-fix": "XDEBUG_MODE=coverage ./vendor/bin/php-cs-fixer fix"
  }
}
